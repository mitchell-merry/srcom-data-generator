    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        
        "outDir": "./build",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    }
